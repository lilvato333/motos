<script>
    // Mostrar secciones
    function mostrar(seccion) {
        document.querySelectorAll("section").forEach(s => s.classList.remove("active"));
        document.getElementById(seccion).classList.add("active");
        window.scrollTo({ top: 0, behavior: "smooth" });
    }

    // Mostrar opciones din√°micas en el formulario
    function mostrarOpcionesProducto() {
        const tipo = document.getElementById("tipoProducto").value;
        const cont = document.getElementById("opcionesProducto");
        let html = "";
        if (tipo === "moto") {
            html = `
                <label>Selecciona tipo de motocicleta:</label>
                <select required>
                    <option>Deportiva</option>
                    <option>Motoneta</option>
                    <option>Doble prop√≥sito</option>
                </select>`;
        } else if (tipo === "motor") {
            html = `
                <label>Tipo de motor:</label>
                <select required>
                    <option>Nuevo</option>
                    <option>Seminuevo</option>
                    <option>Remanufacturado</option>
                </select>`;
        } else if (tipo === "refaccion") {
            html = `
                <label>Categor√≠a de refacci√≥n:</label>
                <select required>
                    <option>Frenos</option>
                    <option>Llantas</option>
                    <option>Aceites y filtros</option>
                </select>`;
        }
        cont.innerHTML = html;
    }

    // Simular env√≠o del formulario
    function enviarCotizacion(e) {
        e.preventDefault();
        document.getElementById("mensajeEnviado").textContent = "‚úÖ ¬°Cotizaci√≥n enviada con √©xito! Nos pondremos en contacto pronto.";
        e.target.reset();
        document.getElementById("opcionesProducto").innerHTML = "";
    }

    // Soluciones
    function mostrarSolucion(tipo) {
        const detalle = document.getElementById("detalleSolucion");
        const soluciones = {
            bateria: "Reemplazamos bater√≠a, revisamos sistema de carga y alternador.",
            aceite: "Sellamos fugas y cambiamos juntas y empaques defectuosos.",
            frenos: "Cambio de pastillas y purgado completo del sistema."
        };
        detalle.innerHTML = `<h3>Soluci√≥n:</h3><p>${soluciones[tipo]}</p>`;
    }

    // Motores
    function mostrarMotores(tipo) {
        const detalle = document.getElementById("detalleMotor");
        const motores = {
            nuevo: { precio: "$12,000", desc: "Garant√≠a completa y alto rendimiento.", img: "https://cdn.pixabay.com/photo/2017/09/04/19/53/motor-2716234_1280.jpg" },
            seminuevo: { precio: "$8,000", desc: "Probado, certificado y en excelente estado.", img: "https://cdn.pixabay.com/photo/2016/03/27/21/16/motorcycle-1283402_1280.jpg" },
            remanufacturado: { precio: "$6,000", desc: "Reacondicionado profesionalmente, como nuevo.", img: "https://cdn.pixabay.com/photo/2017/09/04/19/53/motor-2716234_1280.jpg" }
        };
        let m = motores[tipo];
        detalle.innerHTML = `<img src="${m.img}" width="100%"><h3>Motor ${tipo}</h3><p>${m.desc}</p><strong>Precio: ${m.precio}</strong>`;
    }

    // Refacciones
    function mostrarRefaccion(tipo) {
        const detalle = document.getElementById("detalleRefaccion");
        const ref = {
            frenos: "Discos ventilados, pastillas de alto rendimiento, l√≠quido DOT4. Precio desde $800.",
            llantas: "Marcas premium (Michelin, Pirelli). Precio desde $1200.",
            aceites: "Aceites sint√©ticos y filtros OEM. Precio desde $450."
        };
        detalle.innerHTML = `<h3>${tipo.charAt(0).toUpperCase() + tipo.slice(1)}</h3><p>${ref[tipo]}</p>`;
    }

    // Motocicletas
    function mostrarMarca(marca) {
        const detalle = document.getElementById("detalleMarca");
        const marcas = {
            italika: {
                modelos: [
                    { nombre: "Deportiva 250Z", precio: "$39,999", especificaciones: "Motor 250cc, 5 velocidades, frenos de disco, 28 HP." },
                    { nombre: "Motoneta Vitalia 150", precio: "$28,499", especificaciones: "Motor 150cc, transmisi√≥n autom√°tica, estilo cl√°sico." },
                    { nombre: "Doble Prop√≥sito DM200", precio: "$45,999", especificaciones: "Motor 200cc, suspensi√≥n alta, ideal para caminos mixtos." }
                ]
            },
            kawasaki: {
                modelos: [
                    { nombre: "Ninja 400", precio: "$164,999", especificaciones: "Motor 399cc, 47 HP, 6 velocidades, frenos ABS." },
                    { nombre: "Versys 650", precio: "$189,999", especificaciones: "Motor bicil√≠ndrico 649cc, 68 HP, viaje c√≥modo y largo alcance." }
                ]
            },
            suzuki: {
                modelos: [
                    { nombre: "GSX-S750", precio: "$198,999", especificaciones: "Motor 749cc, 4 cilindros, 114 HP, estilo naked sport." },
                    { nombre: "V-Strom 250", precio: "$124,999", especificaciones: "Motor 248cc, doble prop√≥sito, tanque de 17L." }
                ]
            },
            honda: {
                modelos: [
                    { nombre: "CBR500R", precio: "$184,999", especificaciones: "Motor bicil√≠ndrico 471cc, 47 HP, carenado deportivo." },
                    { nombre: "XR150L", precio: "$72,999", especificaciones: "Motor 150cc, doble prop√≥sito, ligera y eficiente." }
