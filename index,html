        };
        const data = marcas[marca];
        let html = `<h3>${marca.toUpperCase()}</h3>`;
        data.modelos.forEach(m => {
            html += `<div style="margin-bottom:15px;"><strong>${m.nombre}</strong><br>${m.especificaciones}<br><strong>Precio: ${m.precio}</strong></div>`;
        });
        detalle.innerHTML = html;
    }
